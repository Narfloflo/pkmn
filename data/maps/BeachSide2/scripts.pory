script SailorToHoenn2{ 
    lock
    faceplayer
        msgbox("Want to go Back to HOENN ?", MSGBOX_YESNO)
        if(var(VAR_RESULT) !=0){
            msgbox("Here we go !")
            call(WarpToHoenn2)
        } else{
            msgbox("I'm standing right here !")
        }
    release
    end
}
 
 script WarpToHoenn2{
    fadescreen(FADE_TO_BLACK)
    delay(5)
    warp(MAP_BEACH_SIDE, 76, 43)
    fadescreen(FADE_FROM_BLACK)
 }

