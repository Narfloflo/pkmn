script Route34_Text_LittleGirl {
    lock
    faceplayer
    msgbox("Hey! Looks like you beat all my friend\non ROUTE 34?\lYou want me to call them to have a\lrematch?", MSGBOX_YESNO)
    if(var(VAR_RESULT) == 1){
        playse(SE_POKENAV_CALL)
        waitse
        cleartrainerflag(TRAINER_ROBERT_2)
        cleartrainerflag(TRAINER_ROBERT_3)
        cleartrainerflag(TRAINER_ROBERT_4)
        cleartrainerflag(TRAINER_LAO_2)
        playse(SE_POKENAV_HANG_UP)
        waitse
        msgbox("It's done!\nThey'll pretend they've never fought\lwith you. Teehee!\l{PLAYER}: Urgh!")
    }else{
        msgbox("No? Ok no worry.\nThey should train some more anyway and\llearn the basics of battle in school.")
    }
    release
    end
}

