mapscripts Route34_MapScripts {}

script Route34_Text_Jeanlouis {
    lock
    faceplayer
    if(!defeated(TRAINER_ROSE_2)){
        goto(Route34_Text_JeanlouisFight)
    }else{
        goto(Route34_Text_JeanlouisRematch)
    }
    release
    end
}

script Route34_Text_JeanlouisFight {
    msgbox(format("I'm patrolling around here. Criminality in JOHTO is low, what about a quick battle ?"), MSGBOX_YESNO)
    if(var(VAR_RESULT)==1){
        trainerbattle_single(TRAINER_ROSE_2, "You are defying the authorities ?", "I'll keep an eye on you punk !")
    }else{
        msgbox(format("Yes, you fear the authorities!"))
    }
    release
    end
}

script Route34_Text_JeanlouisRematch {
    msgbox(format("You are still around doing mischieves? Do you have some time for a BATTLE ?"), MSGBOX_YESNO)
    if(var(VAR_RESULT)==1){
    cleartrainerflag(TRAINER_ROSE_2)
    trainerbattle_single(TRAINER_ROSE_2, "I can't lose again !", "I'll keep an eye on you punk !")
    }else{
        msgbox(format("Yes, you fear the authorities !"))
    }
    release
    end
}

