    cleartrainerflag(TRAINER_LOLA_2)
    trainerbattle_single(TRAINER_LOLA_2, "Let's follow the rythme", "I had no chance !")
    }else{
        msgbox(format("It's okay, I have people to entertain."))
    }
    release
    end
}

