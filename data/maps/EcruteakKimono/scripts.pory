script EcruteakDanceHall_Text_Morty {
    lock
    faceplayer
    if(!defeated(TRAINER_FLANNERY_3)){
        msgbox(format("Humm yes? Oh the GYM is closed?\nWell yes, look I'm a little busy\lwatching the dance so I won't\lopen it just for you.\lAh you want to fight here instead?\lOk! I can do that!\lAre you ready?"), MSGBOX_YESNO)
        if(var(VAR_RESULT)==1){
            goto(EcruteakDanceHall_Text_MortyFight)
        }else{
            msgbox(format("You serious?\nYou disturbed me for nothing?\lNot a good game lad!"))
        }
    }elif(defeated(TRAINER_FLANNERY_3)){
        goto(EcruteakDanceHall_Text_MortyRematch)
    }
    
    release
    end
}

script EcruteakDanceHall_Text_MortyFight {
    trainerbattle_single(TRAINER_FLANNERY_3, "Let the fog invade you!", "Humm...\nI'm the one who've been blured!")
    release
    end
}

script EcruteakDanceHall_Text_MortyRematch {
    msgbox(format("Look this is my favourite dance!\nYou can't understand how peaceful\lthis is. It's a good way to\lappease the death!\lHumm... You want to fight again?"),MSGBOX_YESNO)
