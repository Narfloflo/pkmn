script EcruteakKimono_Text_Zuki {
    lock
    faceplayer
    if(!defeated(TRAINER_LOLA_2)){
        goto(EcruteakKimono_Text_FightZuki)
    }else{
        goto(EcruteakKimono_Text_ZukiRematch)
    }
    release
    end
}
script EcruteakKimono_Text_FightZuki {
    msgbox(format("Hey, you mind if we have a small fight between two DANCES ?"), MSGBOX_YESNO)
    if(var(VAR_RESULT)==1){
        trainerbattle_single(TRAINER_LOLA_2, "Let's enjoy this !", "Good fight !")
    }else{
    msgbox(format("It's okay, I have people to entertain."))
    }
    release
    end
}

script EcruteakKimono_Text_ZukiRematch {
    msgbox(format("I keep dancing but I don't mind to take a break if you want a rematch."), MSGBOX_YESNO)
