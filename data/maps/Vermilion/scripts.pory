 }

movement Exclamation {
   emote_exclamation_mark
   walk_in_place_down
}

script GetAway {
   lock
   applymovement(4, GuyUp)
   applymovement(3, GuyDown)
   waitmovement(0)
   msgbox(format("The road here is closed. The DUGLETTS are making a mess.\pWe are investigating the place."))
   applymovement(OBJ_EVENT_ID_PLAYER, ReturnLeft)
   waitmovement(0)
   release
   end
}

movement ReturnLeft {
    walk_left
}

