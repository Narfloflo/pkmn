script SailorToHoenn{ 
    lock
    faceplayer
        msgbox("Want to go Back to HOENN ?", MSGBOX_YESNO)
        if(var(VAR_RESULT) !=0){
            msgbox("Here we go !")
            call(WarpToHoenn)
        } else{
            msgbox("I'm standing right here !")
        }
    release
    end
}
 
 script WarpToHoenn{
    fadescreen(FADE_TO_BLACK)
    delay(5)
    warp(MAP_SLATEDOCKCOPY, 8, 10)
    fadescreen(FADE_FROM_BLACK)
 }

