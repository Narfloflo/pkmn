 script Vermilion_Text_Fisherman {
     lock
     msgbox(format("Hope I'll get something other than a MAGIKARP.."))
     applymovement(11, Exclamation)
     waitmovement(0)
     msgbox(format("Oh ! another MAGIKARP..."))
     release
