mapscripts Route21_MapScripts {}

script Route21_Text_Fisherman {
    call_if_unset(FLAG_TEMP_1, Route21_Text_FishermanFight)
    if(flag(FLAG_TEMP_1)== TRUE){
        faceplayer
        msgbox(format("I Was just angry that I couldn't catch anything."))
        release
        end
    }
}

script Route21_Text_FishermanFight {
    trainerbattle_single(TRAINER_DYLAN_2, "Wanna see my fresh fishes ?", "Plouff !")
    setflag(FLAG_TEMP_1)
    cleartrainerflag(TRAINER_DYLAN_2)
    end
}

