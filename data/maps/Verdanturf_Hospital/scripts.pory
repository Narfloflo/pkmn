mapscripts Verdanturf_Hospital_MapScripts {}

script Verdanturf_Hospital_Nurse {
    lock
    faceplayer
    msgbox(format("This is the Verdanturf Town Hospital.\nPlease remain quiet while you are here.\pThanks you."))
    release
    end
}

script Verdanturf_Hospital_Azurill {
    lockall
    msgbox(format("{PLAYER}: This POKEMON is taking care of it's trainer.\pKinda cute."))
    releaseall
}

