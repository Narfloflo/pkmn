    lock
    faceplayer
    msgbox(format("I'm looking for a book about a POKEMON that help and take care of the people.\pIt's a fat pink stuff."))
    showmonpic(SPECIES_CHANSEY, 10,3)
    delay(100)
    hidemonpic
    release
    end
}

