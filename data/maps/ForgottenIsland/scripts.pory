mapscripts ForgottenIsland_MapScripts {
    MAP_SCRIPT_ON_LOAD{
        call_if_set(FLAG_UNUSED_0x021,ForgottenIsland_Event_DoorEntei)
        end
    }
}

script ForgottenIsland_Event_DoorEntei {
    setmetatile(60,40,METATILE_Pacifidlog_SkyPillar_DoorOpen_Top,TRUE)
    setmetatile(60,41,METATILE_Pacifidlog_SkyPillar_DoorOpen_Bottom,FALSE)
    end
}

script ForgottenIsland_Text_BlackBelt1 {
    lock
    faceplayer
    if(flag(FLAG_UNUSED_0x021)== TRUE){
        msgbox(format("Woooh! An incredible POKéMON just blast into the tower at such speed, it destroyed the door !"))
    }else{
        msgbox(format("This tower has been here for so long, I don't even know when it was built and by whom."))
    } 
    release
    end
}

