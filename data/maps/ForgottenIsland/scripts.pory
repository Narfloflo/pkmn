script ForgottenIsland_Text_NinjaKid {
    lock
    faceplayer
    checkitem(ITEM_POKE_BALL)
    if(var(VAR_RESULT)== TRUE){
        goto(ForgottenIsland_Text_NinjaKidYesNo)
    }else{
        msgbox("You know that I cannot leave the\nvillage, otherwise I can be attacked by\lsome wild POKéMON.", MSGBOX_NPC)
        release
        end  
    }
    
}

script ForgottenIsland_Text_NinjaKidYesNo {
    msgbox("Can you give me some of these BALLS?\nI want to capture one! Grandpa will be\lamazed!", MSGBOX_YESNO)
    if(var(VAR_RESULT) == TRUE){
        removeitem(ITEM_POKE_BALL, 1)
        msgbox("Thanks you!! I'm gonna be the toughest\nguy in here!\lThe'll cry for mercy!\l{PLAYER}: I don't know if it was a good\lidea...")
        release
        end
    }else{
        msgbox("Oh I'm the saddest boy in the world...")
        release
        end
    }
}

