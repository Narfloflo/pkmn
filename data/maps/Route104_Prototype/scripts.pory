    lock
    faceplayer
    if(!defeated(TRAINER_FLANNERY_4)){
        msgbox(format("Wahhhhhh!\nI'm training really hard! My\lmaster BRUNO taught me that a\ldaily training is the only way to\limprove yourself!\lWhat they told you I've been\lbeaten by a kid?!!\lOh come on! I'll show you that I'm\lnot that weak!"), MSGBOX_YESNO)
        if(var(VAR_RESULT)==1){
            goto(CianwoodCave_Text_ChuckFight)
        }else{
            msgbox(format("Yeah! go train yourself and when\nyou are stronger come back to me!"))
        }
    }elif(defeated(TRAINER_FLANNERY_4)){
        goto(CianwoodCave_Text_ChuckRematch)
    }
    
