script HoennAirport_Text_BusDriver {
    lock
    faceplayer
    msgbox(format("I'm driving buses all around\nHOENN for the people who are not\lTRAINER.\l..............................\lWhat you haven't seen any of\lthose bus anywhere? Well, I'm\lvery busy! Scram!"))
    release
    end
}

script HoennAirport_Text_ShipReceptionist {
    lock
    faceplayer
    if(flag(FLAG_CAUGHT_MEW)==TRUE){
        goto(HoennAirport_Text_MewCaught)
    }
    checkitem(ITEM_OLD_SEA_MAP, 1)
    if(var(VAR_RESULT)==1){
        msgbox(format("Oh my ARCEUS! This is the OLD SEA MAP ?! Please come in !"))
        applymovement(4, HoennAirport_Move_Sailor)
        waitmovement(4)
        delay(15)
        applymovement(OBJ_EVENT_ID_PLAYER, HoennAirport_Move_Player)
        waitmovement(0)
        call(HoennAirport_Text_MoveBoat)
    }
    msgbox(format("Hello!\p......................\nHuh, I don't think you have a TICKET for using the SHIP. Sorry."))
    release
    end
}

movement HoennAirport_Move_Sailor {
    walk_down
    set_invisible
    step_end
}

movement HoennAirport_Move_Player {
    walk_down *2
    set_invisible
    step_end
}

script HoennAirport_Text_MoveBoat {
    fadescreen(FADE_TO_BLACK)
    playse(SE_RG_SS_ANNE_HORN)
    delay(60)
    warp(MAP_FARAWAY_ISLAND_ENTRANCE, 13, 38)
    fadescreen(FADE_FROM_BLACK)
}

