script HoennAirport_Text_BusDriver2{ 
    lock
    faceplayer
        msgbox("Hi, I can bring you to the BEACH\nRESORT.\lDo you wanna take the bus?", MSGBOX_YESNO)
        if(var(VAR_RESULT) ==1){
            msgbox("Please, come in !")
            call(HoennAirport_Event_WarpToAirport)
