script DesertHouse_Text_Dusclops {
    lock
    faceplayer
    playmoncry(SPECIES_DUSCLOPS, CRY_MODE_ENCOUNTER)
    msgbox(format("Looooops !"))
    waitmoncry
    setwildbattle(SPECIES_DUSCLOPS, 55)
	dowildbattle
    specialvar(VAR_RESULT, GetBattleOutcome)
    if(var(VAR_RESULT) == B_OUTCOME_CAUGHT){
		removeobject(1)
	}
	elif(var(VAR_RESULT) == B_OUTCOME_WON){
		removeobject(1)

	}
	elif(var(VAR_RESULT) == B_OUTCOME_RAN){
		removeobject(1)

	}
	elif(var(VAR_RESULT) == B_OUTCOME_PLAYER_TELEPORTED){
		removeobject(1)
	}
	return
}

