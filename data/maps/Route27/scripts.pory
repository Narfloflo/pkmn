script Route27_Text_Whirlpool4 {
    lock
    checkitem(ITEM_MACH_BIKE, 1)
    if(var(VAR_RESULT)== TRUE){
        goto(Route27_Text_RemoveWhirlpool4)
    }else{
        msgbox(format("It's a vicious WHIRLPOOL, maybe we can remove it..."),MSGBOX_AUTOCLOSE)
    }
    release
    end
}

script Route27_Text_RemoveWhirlpool4 {
    msgbox(format("It's a vicious WHIRLPOOL.\nWanna remove it ?"),MSGBOX_YESNO)
    if(var(VAR_RESULT)== 1){
        playse(SE_M_WHIRLPOOL)
        waitse
        removeobject(5)
    }
    release
    end
}

